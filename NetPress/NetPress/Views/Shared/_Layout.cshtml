<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - NetPress</title>

    <link href="~/Content/footer-distributed-with-address-and-phones.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/css")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"></button>
                <a href="@Url.Action("Index","Blogs")">
                    <img class="logo-image" src="~/Images/NetPress_logo.png" alt="NetPress logo">
                </a>
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Categories<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            @*@foreach (NetPress.Models.Category category in ViewBag.categoryList)
                            {
                                <li>@Html.ActionLink(category.CategoryName, "Index", "Blogs", new { search = category.CategoryName }, new { @class = "navbar-title" })</li>
                            }*@
                        </ul>
                    </li>
               
                    <li class="search-form-navbar-list-item">
                        @using (Html.BeginForm("Index", "Blogs", FormMethod.Get, new { search = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            string v = Request.QueryString["search"];

                            @Html.TextBox("search", v, new Dictionary<string, object> { { "class", "form-control navbar-search-box" }, { "id", "search" } })
                            
                            <button id="search-btn" type="submit" class="btn btn-default navbar-search-button">
                                Search
                            </button>
                        }
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div style="margin-top:2%;"></div>



    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>



    <footer class="footer-distributed">
        <div class="footer-left">
            <img style="width: 35%;" src="~/Images/NetPress_logo.png" />
            <p class="footer-links">
                <a href="#">Luke Theuma</a>
                -
                <a href="#">Ryan Aquilina</a>
                -
                <a href="#">Etienne Galea</a>
            </p>
            <p class="footer-company-name">NetPress - @DateTime.Now.Year</p>
        </div>
        <div class="footer-center">
            <div>
                <i class="fa fa-map-marker"></i>

                <p>
                    University of Malta
                    <br />
                    MSD 2080, Msida
                </p>
            </div>
            <div>
                <i class="fa fa-phone"></i>
                <p>+356 21 420300</p>
            </div>
            <div>
                <i class="fa fa-envelope"></i>
                <p>netpress@gmail.com</a></p>
            </div>
        </div>
        <div class="footer-right">
            <p class="footer-company-about" style="text-align:justify;">
                <span>About the company</span>
                Netpress is a free blogging website allowing children and adults alike to write their stories for the "world" to see.
            </p>
            <div class="footer-icons">
                <a href="#"><i class="fa fa-facebook"></i></a>
                <a href="#"><i class="fa fa-twitter"></i></a>
                <a href="#"><i class="fa fa-linkedin"></i></a>
                <a href="#"><i class="fa fa-github"></i></a>
            </div>
        </div>
    </footer>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>


